#!/bin/bash

# Simple, clean MultiPing v1.6 installer
echo "üöÄ MultiPing v1.6 Installer"
echo "=============================="
echo ""

# Get the directory where this installer is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
WORKING_DIR="$(dirname "$SCRIPT_DIR")"

# Change to the working directory
cd "$WORKING_DIR"

# Check if MultiPing executable exists
if [ ! -f "MultiPing-v1.6-release" ]; then
    echo "‚ùå Error: MultiPing executable not found!"
    echo ""
    echo "Please make sure this installer is in the same folder as MultiPing-v1.6-release"
    echo ""
    echo "Press any key to close..."
    read -n 1
    exit 1
fi

echo "üìù Installing MultiPing..."
chmod +x MultiPing-v1.6-release

if [ -x "MultiPing-v1.6-release" ]; then
    echo "‚úÖ Installation complete!"
    echo ""
    echo "üéØ To run MultiPing:"
    echo "   ./MultiPing-v1.6-release"
    echo ""
    echo "üì± MultiPing will appear in your menubar (top-right of screen)"
    echo ""
    echo "Press any key to close..."
    read -n 1
else
    echo "‚ùå Installation failed"
    echo ""
    echo "Press any key to close..."
    read -n 1
    exit 1
fi
